<Page x:Class="Groove.View.Pages.Main_Alt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Groove.View.Pages"
      xmlns:UserControls="clr-namespace:Groove.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_Alt">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.95*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <UserControls:PlayListAlt ImageSource="/Assets/Telegram.png" Margin="5"/>
            <UserControls:PlayListAlt ImageSource="/Assets/Telegram.png" Margin="5"/>
            <UserControls:PlayListAlt ImageSource="/Assets/Telegram.png" Margin="5"/>
            <UserControls:PlayListAlt ImageSource="/Assets/Telegram.png" Margin="5"/>
            <UserControls:PlayListAlt ImageSource="/Assets/Telegram.png" Margin="5"/>

        </StackPanel>

        <ScrollBar Grid.Column="1" Margin="0,10,0,10" Width="10" BorderBrush="Black"
           BorderThickness="1.5" Background="#FFFFFF"/>
        
    </Grid>
</Page>
